@* @model List<ResultCategoryDto>  *@

@model ResultSearchListViewModelDto

<section class="w3l-cover-3">
    <div class="cover top-bottom">
        <div class="container">
            <div class="middle-section text-center">
                <div class="section-width">
                    <p>Hayalinizdeki Eve Sahip Olun!</p>
                    <h2>Bugün Sizin İçin Doğru Evi Bulalım</h2>
                    <div class="most-searches">
                        <h4>Sık Arananlar</h4>
                        <ul>

                            @foreach (var most in Model.MostSearches)
                            {
                                <li><a href="#">@most.City</a></li>
                            }
                        </ul>
                    </div>
                    <form asp-action="PartialSearch" asp-controller="Default" class="w3l-cover-3-gd" method="post">
                        <input type="search" name="searchKeyValue" placeholder="Anahtar Kelimeyi Girin" required>
                        <span class="input-group-btn">
                            <select class="btn btn-default" name="propertyCategoryId" required>
                                <option value="" disabled selected>Gayrimenkul Türü</option>
                                @foreach (var category in Model.SearchCategories)
                                {
                                    <option value="@category.CategoryID">@category.CategoryName</option>
                                }
                            </select>
                        </span>
                        <span class="input-group-btn">
                            <select class="btn btn-default" name="city" required>
                                <option value="" disabled selected>Şehir Seçiniz</option>

                                @foreach (var city in Model.Cities)
                                {
                                    <option value="@city.City">@city.City</option>
                                }
                                <option value="İstanbul">İstanbul</option>
                                <option value="Eskişehir">Eskişehir</option>
                                <option value="İzmir">İzmir</option>
                            </select>
                        </span>
                        <button type="submit" class="btn-primary">Ara</button>
                    </form>
                </div>
                <section id="bottom" class="demo">
                    <a href="#bottom"><span></span>İlan Listesi</a>
                </section>
            </div>
        </div>
    </div>
</section>